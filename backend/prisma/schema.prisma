// Schema Prisma para Factoria Assistant
// Banco de dados: Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  password           String?
  displayName        String?
  role               String    @default("basic") // basic, pro, admin
  status             String    @default("pending") // pending, active
  
  // Dados de assinatura
  plan               String?   // pro_monthly, pro_semiannual, pro_annual
  period             String?   // monthly, semiannual, annual
  subscriptionStatus String?   // active, canceled, expired
  
  // IDs externos
  caktoCustomerId    String?
  caktoSubscriptionId String?
  
  // Timestamps
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  
  @@map("users")
}
